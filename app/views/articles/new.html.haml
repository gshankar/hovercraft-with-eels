#article_form
  .centered
    %h1
      Feed me a URL
    = simple_form_for(@article, :html => {:class => 'form-horizontal' }) do |f|
      = f.input :url, :label => false, :required => true, :placeholder => 'http://hovercraftwitheels.com'
      = f.button :submit, :value => "Do it", :class => 'btn-primary', :id => 'form_submit'

    =image_tag("hovercraft.png")
